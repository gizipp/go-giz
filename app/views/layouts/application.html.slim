         body {
           font-family: Nunito, Arial, sans;
           font-display: swap;
           margin: 20px;
         }

         main {
           max-width: 580px;
           margin: 0 auto;
         }

         h1 {
           margin: 0;
         }

         a, a:visited, h1 a, h1 a:visited {
           color: royalblue;
           text-decoration: none;
           font-weight: bold;
         }

         small {
           font-size: 0.8em;
         }

         aside {
           display: inline-block;
           width: 49%;
         }

         @media screen and (max-width: 798px) {
           aside {
             width: 100%;
           }
         }

         textarea {
           width: 100%;
           height: 60vh;
           font-size: 1.1em;
           border-style: solid;
           border-width: 1px;
           margin: 8px auto;
         }

         button {
           background-color: royalblue;
           color: white;
           border: 3px solid royalblue;
           float: right;
           letter-spacing: 2px;
           font-size: 1em;
           text-transform: uppercase;
           margin-left: 16px;
           min-width: 100px;
         }

         header {
           margin-bottom: 20px;
         }

         footer {
           margin-top: 20px;
         }

         ol {
           font-size: 0.8em;
           list-style: none;
           display: flex;
           padding: 0;
           line-height: 0;
         }
